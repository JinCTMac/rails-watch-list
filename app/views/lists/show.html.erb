<h1><%= @list.name %></h1>

<div class="container">
  <ul class='list-group'>
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <%= bookmark.comment %>
        <%= link_to 'delete', bookmark_path(bookmark), method: :delete %>
      </li>
    <% end %>
  </ul>
</div>

<div class="button-container">
  <%= link_to 'Lists', lists_path, class: "btn btn-primary" %>
  <%= link_to 'Add a new bookmark', new_list_bookmark_path(params[:id]), class: "btn btn-success" %>
</div>
